// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  role      String   @default("GUDANG")
  createdAt DateTime @default(now())
}

// === MODEL MATERIAL YANG DIPERBARUI ===
model Material {
  id             String   @id @default(uuid())
  name           String
  unit           String
  pricePerUnit   Float    @default(0)
  stock          Float    @default(0)

  // 1. Parameter Rumus EOQ
  eoqBiayaPesan  Float    @default(0) // S
  eoqBiayaSimpan Float    @default(0) // H

  // 2. Data Aktual (Agar SAMA PERSIS dengan Excel)
  // Kolom inilah yang tadi bikin error karena belum ada
  existingHoldCost Float  @default(0) // Simpan angka 324 Juta disini
  existingFreq     Float  @default(0) // Simpan angka 72 disini
  existingQty      Float  @default(0) 

  transactions   Transaction[]
}

model Supplier {
  id      String   @id @default(uuid())
  name    String    
}

model Transaction {
  id         String    @id @default(uuid())
  date       DateTime  @default(now())
  type       String    
  quantity   Float
  materialId String
  material   Material  @relation(fields: [materialId], references: [id])
}